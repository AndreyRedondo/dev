<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td>Placeholder</td>
      <td><%= button_to 'Show', article_path(article) %></td>
      <td><%= button_to 'Delete', article_path(article), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
